<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackgroundList"
>

        <TextView
            android:id="@+id/textmarca"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignBaseline="@+id/textname"
            android:layout_alignBottom="@+id/textname"
            android:layout_alignParentStart="true"
            android:layout_margin="1dp"
            android:layout_marginStart="7dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="1dp"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/textadicionado"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/textadicionado"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:padding="1dp"
            android:text="Adicionado"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorBackgroundList">

        <TextView
            android:id="@+id/textname"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:padding="1dp"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textadicionado"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignEnd="@+id/textCombustivel"
            android:layout_alignStart="@+id/textCombustivel"
            android:layout_below="@+id/textCombustivel"
            android:layout_margin="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:padding="1dp"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>